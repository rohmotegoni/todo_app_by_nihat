model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  todos    Todo[]
}

model Todo {
  todoId      Int    @id @default(autoincrement())
  title       String
  description String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}
